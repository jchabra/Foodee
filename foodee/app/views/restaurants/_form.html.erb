<ul class='errors'>
	<% @restaurant.errors.full_messages.each do |error| %>
	<li><%= error %></li>
	<% end %>
</ul>

<%= form_for @restaurant do |f| %>
<div class="forms">
	<div class='field'>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class='field'>
		<%= f.label :cuisine %>
		<%= f.text_field :cuisine %>
	</div>
	<div class='field'>
		<%= f.label :address %>
		<%= f.text_field :address %>
	</div>
	<div class='field'>
		<%= f.submit %>
	</div>
</div>
<% end %>