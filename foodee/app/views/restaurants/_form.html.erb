<%= render :partial => 'shared/errors', :locals => {:object => @restaurant} %>

<%= form_for @restaurant do |f| %>
<div class="forms">
	<div class='field'>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class='field'>
		<%= f.label :cuisine %>
		<%= f.text_field :cuisine %>
	</div>
	<div class='field'>
		<%= f.label :address %>
		<%= f.text_field :address %>
	</div>
	<div class='field'>
		<% Dish.all.each do |dish| %>
			<%= check_box_tag 'restaurant[dish_ids][]', dish.id, @restaurant.dishes.include?(dish) %>
			<!-- each check box has its own id -->
			<span><%= dish.name %></span>
		<% end %>
	</div>
	<div class='field'>
		<%= f.submit %>
	</div>
</div>
<% end %>